@model IEnumerable<VMS.Models.TrainerProfile>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts")
</head>
<body>
    @if (Session["userType"].ToString() == "V")
    {
        <p>
            @Html.ActionLink("Add Profile", "AddTrainerProfile",new { id = @ViewBag.reqID })
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReqId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>
                View Profile
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReqId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            
            <td>
                <a href="@item.getProfileLink()"> Download </a>
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
